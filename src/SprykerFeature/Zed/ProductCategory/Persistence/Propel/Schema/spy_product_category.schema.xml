<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:noNamespaceSchemaLocation="http://xsd.propelorm.org/1.6/database.xsd" namespace="Orm\Zed\ProductCategory\Persistence" package="src.Orm.Zed.ProductCategory.Persistence">

    <table name="spy_product_category" idMethod="native" phpName="SpyProductCategory">
        <column name="id_product_category" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="fk_abstract_product" required="true" type="INTEGER"/>
        <column name="fk_category" required="true" type="INTEGER"/>
        <column name="product_order" required="false" default="0" type="INTEGER"/>

        <foreign-key foreignTable="spy_category">
            <reference foreign="id_category" local="fk_category"/>
        </foreign-key>

        <foreign-key foreignTable="spy_abstract_product">
            <reference foreign="id_abstract_product" local="fk_abstract_product"/>
        </foreign-key>

        <unique>
            <unique-column name="fk_abstract_product"/>
            <unique-column name="fk_category"/>
        </unique>
        <id-method-parameter value="spy_product_category_pk_seq"/></table>
</database>
